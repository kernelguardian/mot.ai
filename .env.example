# Database Configuration
DATABASE_URL=your_postgresql_connection_string

# PostgreSQL Configuration (alternative to DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=your_username
PGPASSWORD=your_password
PGDATABASE=mot_ai

# Official DVSA MOT History API Credentials
# To get these credentials, register at: https://documentation.history.mot.api.gov.uk/
# All four values are required for the official DVSA API integration

# OAuth2 Client ID from DVSA
DVSA_CLIENT_ID=your_client_id_here

# OAuth2 Client Secret from DVSA (expires every 2 years)
DVSA_CLIENT_SECRET=your_client_secret_here

# Full OAuth2 Token URL from DVSA (includes tenant ID)
# Example: https://login.microsoftonline.com/{tenant-id}/oauth2/v2.0/token
DVSA_TOKEN_URL=your_full_token_url_here

# API Key from DVSA (revoked if unused for 90 days)
DVSA_API_KEY=your_api_key_here

# Development Environment
NODE_ENV=development